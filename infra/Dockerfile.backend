FROM node:18-alpine AS base

WORKDIR /app

COPY backend/package*.json ./

RUN npm ci

COPY backend/ ./

FROM base AS development
CMD ["npm", "run", "dev"]

FROM base AS builder
RUN npm run build

FROM node:18-alpine AS production

WORKDIR /app

COPY backend/package*.json ./
RUN npm ci --only=production

COPY --from=builder /app/dist ./dist

EXPOSE 3001

CMD ["npm", "start"]
